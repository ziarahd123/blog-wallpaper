---
interface Props {
  title: string;
  description: string;
  category: string;
  image: string;
  date: string;
  href: string;
}

const { title, description, category, image, date, href } = Astro.props;
---

<article class="relative bg-white rounded-lg shadow-lg overflow-hidden md:grid md:grid-cols-2 md:gap-8">
  <div class="relative h-64 md:h-full">
    <img 
      src={image} 
      alt={title} 
      class="w-full h-full object-cover"
      loading="eager"
      decoding="async"
      fetchpriority="high"
    />
  </div>
  <div class="p-8">
    <div class="flex items-center mb-4">
      <span class="text-sm text-primary font-medium">{category}</span>
      <span class="mx-2 text-gray-300">â€¢</span>
      <time class="text-sm text-gray-500">{date}</time>
    </div>
    <h2 class="text-2xl font-bold mb-4 text-gray-900">{title}</h2>
    <p class="text-gray-600 mb-6">{description}</p>
    <a href={href} class="inline-flex items-center text-primary font-medium hover:underline">
      Read More
      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>
</article>