---
interface Props {
  title: string;
  description: string;
  category: string;
  image: string;
  date: string;
  href: string;
}

const { title, description, category, image, date, href } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden">
  <a href={href}>
    <div class="relative h-48">
      <img 
        src={image} 
        alt={title}
        width="400"
        height="300"
        class="w-full h-full object-cover"
        loading="lazy"
        decoding="async"
      />
    </div>
    <div class="p-6">
      <div class="flex items-center mb-4">
        <a href={`/category/${category}`} class="text-sm text-primary font-medium hover:underline">{category}</a>
        <span class="mx-2 text-gray-300">â€¢</span>
        <time class="text-sm text-gray-500">{date}</time>
      </div>
      <h2 class="text-xl font-bold mb-2 text-gray-900 line-clamp-2">{title}</h2>
      <p class="text-gray-600 line-clamp-2">{description}</p>
    </div>
  </a>
</article>